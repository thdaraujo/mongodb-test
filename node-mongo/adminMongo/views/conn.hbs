<div class="col-lg-10">
	<div class="col-lg-6">
		<div class="col-lg-12">
			<h3 class="no-pad-top">Database maintenance</h3>
			<label for="new_db_name">Create new database</label>
			<div class="input-group">
				<input type="text" class="form-control input-sm" id="new_db_name" placeholder="database name">
				<span class="input-group-btn">
					<button class="btn btn-success btn-sm" id="db_create">Create</button>
				</span>
			</div></br></br>
			<label for="exampleInputEmail1">Delete database</label>
			<div class="input-group">
				<select class="form-control input-sm" id="del_db_name">
					{{#each db_list}}
						<option>{{this}}</option>
					{{/each}}
				</select>
				<span class="input-group-btn">
					<button class="btn btn-danger btn-sm" id="db_delete">Delete</button>
				</span>	
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		
	</div>
</div>
<input type="hidden" value="{{conn_name}}" id="conn_name">

